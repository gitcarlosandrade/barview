<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/estimated_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:id="@+id/actual_bar"
            android:layout_width="0dp"
            android:layout_height="6dp"
            />

        <View
            android:id="@+id/over_bar"
            android:layout_width="0dp"
            android:layout_height="6dp"
            />

    </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/valueTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/positive_green"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toRightOf="@id/estimated_bar"
        android:layout_toEndOf="@id/estimated_bar"
        tools:text="R$ 9.231"
        />

</RelativeLayout>